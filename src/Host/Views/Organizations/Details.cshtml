@using YAGO.World.Infrastructure.Database.Models.Domains;
@using YAGO.World.Infrastructure.Parameters;
@using YAGO.World.Infrastructure.Helpers;
@model Organization

@{
    ViewData["Title"] = "Владение";
}

<h1>Подробности</h1>

<div>
    <h4>Владение @Model.Name</h4>
    @{
        var user = Model.User;
        if (user != null)
        {
            <p style="margin-bottom: 0">Занято игроком @Model.User.NormalizedUserName</p>
        }
        else if ((bool)ViewBag.CanTake)
        {
            @*<p style="margin-bottom: 0">Временно заблокировано</p>*@
            <a asp-action="Take" asp-route-id="@Model.Id">Взять под свой контроль</a>;
        }
        else
        {
            <p style="margin-bottom: 0">Доступно для нового игрока</p>
        }
    }
</div>

<div class="tab">
    <button class="tablinks active" onclick="openTab(event, 'History')">История событий</button>
    <button class="tablinks" onclick="openTab(event, 'Parameters')">Информация</button>
</div>

<div id="History" class="tabcontent" style="display: block">
    <h4>История событий</h4>
    <a class="nav-link" asp-controller="History" asp-action="Filter" asp-route-defaultDomainId="@Model.Id">Настроить фильтр</a>
    <table class="table">
        <tbody>
            <partial name="_DomainHistory" model="Model" />
        </tbody>
    </table>
</div>

<div id="Parameters" class="tabcontent" style="display: none">
    <h4>Информация</h4>
    <table class="table">
        <tbody>
            <partial name="_DomainParameters" model="Model" />
        </tbody>
    </table>
</div>

<script>
    function openTab(evt, tabName) {
        let tabcontent = document.getElementsByClassName("tabcontent");
        for (let i = 0; i < tabcontent.length; i++) {
            tabcontent[i].style.display = "none";
        }
        let tablinks = document.getElementsByClassName("tablinks");
        for (let i = 0; i < tablinks.length; i++) {
            tablinks[i].className = tablinks[i].className.replace(" active", "");
        }
        document.getElementById(tabName).style.display = "block";
        evt.currentTarget.className += " active";
    }
</script>
