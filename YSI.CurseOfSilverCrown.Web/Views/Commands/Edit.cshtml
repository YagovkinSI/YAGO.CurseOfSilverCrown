@using YSI.CurseOfSilverCrown.Web.Enums;
@model YSI.CurseOfSilverCrown.Web.Models.DbModels.Command

@{
    ViewData["Title"] = "Действие";
}

<h1>Редактирование</h1>

<h4>Действие</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<enCommandTypeForChoose>()"
                        onchange="onCommandChanged()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div id="commandTarget" class="form-group">
                <label asp-for="TargetOrganizationId" class="control-label"></label>
                <select asp-for="TargetOrganizationId" class="form-control" asp-items="ViewBag.TargetOrganizationId"></select>
                <span asp-validation-for="TargetOrganizationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">

    window.onload = function () {
        onCommandChanged();
    };

    function onCommandChanged() {
        if (document.getElementById("Type").value == "2")
            document.getElementById("commandTarget").style.visibility = "visible";
        else
            document.getElementById("commandTarget").style.visibility = "hidden";
    }

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
