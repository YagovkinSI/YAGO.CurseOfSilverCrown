@using YSI.CurseOfSilverCrown.Core.Parameters;
@using YSI.CurseOfSilverCrown.Core.Utils;
@using YSI.CurseOfSilverCrown.Core.Database.Models.GameWorld;
@using YSI.CurseOfSilverCrown.Core.Helpers;
@model Domain

@{
    ViewData["Title"] = "Владение";
}

<h1>Подробности</h1>

<div>
    <h4>Владение</h4>

    <table class="table">
        <tbody>
            <tr>
                <td>
                    Доступна для нового игрока:
                </td>
                <td>
                    @(Model.Person.User == null ? "Да" : "Нет, уже занято")
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.Name)
                </td>
            </tr>
            <tr>
                <td>
                    Войско
                </td>
                <td>
                    @Model.Units.Where(u => u.InitiatorPersonId == Model.PersonId).Sum(u => u.Warriors)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Coffers)
                </td>
                <td>
                    @Model.Coffers
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.InvestmentsShowed)
                </td>
                <td>
                    @(ViewHelper.GetSweetNumber(Model.InvestmentsShowed))
                </td>
            </tr>
            <tr>
                <td>
                    Укрепления
                </td>
                @try
                {
                    <td>
                        @(FortificationsHelper.GetFortCoef(Model.Fortifications)) (вложено - @Model.Fortifications)
                    </td>
                }
                catch
                {
                    <td style="color: red">Ошибка расчета!</td>
                }
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Suzerain)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@Model.Suzerain?.Id">
                        @Html.DisplayFor(model => model.Suzerain.Name)
                    </a>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.Vassals)
                </td>
                <td>
                    @foreach (var vassal in Model.Vassals.OrderBy(v => v.Name))
                    {
                        <p style="margin-bottom: 0">
                            <a asp-action="Details" asp-route-id="@vassal.Id">
                                @vassal.Name
                            </a>
                        </p>
                    }
                </td>
            </tr>
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.MoveOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.MoveOrder)
                </td>
            </tr>
            <tr>
                <td>
                    Прошлые действия
                </td>
                <td>
                    @{
                        var lastEventStories = ViewBag.LastEventStories as List<List<string>>;
                        foreach (var eventStory in lastEventStories)
                        {
                            @foreach (var line in eventStory)
                            {
                                <p style="margin-bottom: 0;">@line</p>
                            }
                            <p style="margin-bottom: 0;">____________________</p>
                        }
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>
